<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
    <h1> all campgrounds</h1>
    <a href="/campground/new" class="btn btn-danger">add campground</a>
   
        <% for (let camp of campgrounds){ %>
          
            <div class="card mb-3">
                <div class="row">
                  <div class="col-md-4">
                    <% if(camp.images[0]){ %>
                    <img crossorigin="anonymous" src="<%= camp.images[0].url%>" class="card-img-top" height="300"  alt="image">
                    <% } %>
                  </div>
                    <div class="col-md-8">
                      <h5 class="card-title"><%= camp.title %></h5>
                      <p class="card-text"><%= camp.description %></p>
                      <a href="/campground/<%=camp._id %>" class="btn btn-primary">show <%= camp.title %></a>
                    </div>
                </div>
            </div>
            <% } %>

            <script>
              const mapToken ='<%-process.env.mapbox_token%>';
              const campgrounds = {features: <%- JSON.stringify(campgrounds) %>} ;

           </script>
 
<script src="/javascripts/clustermap.js"></script>